<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendsmsActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Sending SMS"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/editphonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editSmsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editphonenumber"
        android:layout_alignStart="@+id/editphonenumber"
        android:layout_alignLeft="@+id/editphonenumber"
        android:layout_alignEnd="@+id/textView1"
        android:hint="Enter SMS"
        android:layout_marginTop="48dp"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Sms"
        android:id="@+id/btnSendSMS"
        android:layout_below="@+id/editSmsMessage"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
